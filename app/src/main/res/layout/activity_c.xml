<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityC"
    android:background="@color/blue">

    <TextView
        android:id="@+id/mainActivityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="Activity C"
        android:textSize="22dp"/>

    <Button
        android:id="@+id/buttonActivityA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Activity A"
        android:layout_marginBottom="200dp"
        android:layout_gravity="bottom|center_horizontal"/>


    <Button
        android:id="@+id/buttonActivityC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Activity C"
        android:layout_marginBottom="150dp"
        android:layout_gravity="bottom|center_horizontal"/>

    <Button
        android:id="@+id/buttonActivityD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Activity D"
        android:layout_marginBottom="100dp"
        android:layout_gravity="bottom|center_horizontal"/>

    <Button
        android:id="@+id/buttonCloseStack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close Stack"
        android:layout_marginBottom="50dp"
        android:layout_gravity="bottom|center_horizontal"/>

</FrameLayout>